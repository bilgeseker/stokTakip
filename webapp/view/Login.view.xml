<mvc:View 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:form="sap.ui.layout.form" 
    controllerName="ui5.walkthrough.controller.Login">

	<Page showHeader="false" class="loginPage">
		<content>
			<VBox 
				justifyContent="Center" 
				alignItems="Center" 
				fitContainer="true">
				
				<form:SimpleForm class="loginForm"  layout="ResponsiveGridLayout">
					<form:content>
						<Title id="__xmlview0--title" text="Yönetici Girişi"/>
						<Label class="label" text="Kullanıcı Adı"/>
						<Input class="input loginInput" id="user" placeholder="Kullanıcı adını gir."/>
						<Label text="Şifre"/>
						<Input class="pwdClass loginInput" id="pwd" type="Password" placeholder="Şifre gir."/>
					</form:content>
					<Button icon="sap-icon://visits" id="btn" text="Giriş Yap" type="Accept" press="onBtnClick" width="12rem"/>
				</form:SimpleForm>
				
			</VBox>
		</content>
	</Page>
	
</mvc:View>