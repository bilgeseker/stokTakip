<mvc:View 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:form="sap.ui.layout.form" 
    controllerName="ui5.walkthrough.controller.Login">

	<Page showHeader="false" class="loginPage">
		<content>
			<VBox 
				justifyContent="Center" 
				alignItems="Center" 
				fitContainer="true" 
				width="100%">
				
				<form:SimpleForm class="loginForm"  layout="ResponsiveGridLayout" width="100%" >
					<form:content>
						<Title id="__xmlview0--title" text="Yönetici Girişi" class="sapUiSmallMarginTop"/>
						<Label class="label" text="Kullanıcı Adı"/>
						<Input class="input" id="user"/>
						<Label text="Şifre"/>
						<Input class="pwdClass" id="pwd" type="Password"/>
					</form:content>
					<Button icon="sap-icon://visits" id="btn" text="Giriş Yap" press="onBtnClick" width="9rem" class="sapUiSmallMarginTop sapUiSmallMarginBottom"/>
				</form:SimpleForm>
				
			</VBox>
		</content>
	</Page>
	
</mvc:View>