
<mvc:View
	controllerName="ui5.walkthrough.controller.Home"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
    height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
            <m:HBox justifyContent="End" class="searchAndButton">
                <m:SearchField
                    id="searchField"
                    placeholder="Ürün Ara"
                    search=".onFilterProducts"
                    width="100%"/>
                    
                <m:Button 
                    text="Ürünü sil" 
                    type="Negative" 
                    icon="sap-icon://delete"
                    class="sapUiMediumMarginBegin"
					id="deleteButton"
					press="onDelete">
                </m:Button>
            </m:HBox>
			<Table
                id="productList"
				rows="{products>/}"
				selectionMode="MultiToggle"
				ariaLabelledBy="title"
                showColumnVisibilityMenu="true"
                enableColumnFreeze="true"
                enableCellFilter="true"
                >
				<extension>
                    <m:OverflowToolbar style="Clear">
                        <m:Title id="title" text="Ürünler"/>
                        <m:ToolbarSpacer/>
                        <m:Button icon="sap-icon://clear-filter" type="Negative" press=".clearFilters" tooltip="{i18n>clearFilterText}"/>
                    </m:OverflowToolbar>
                </extension>
				<columns>
                    <Column
                        id="image"
                        width="6rem"
						autoResizable="true">
						<m:Label text="Ürün Resmi" />
						<template>
							<m:Image class="productImage listImage" src="{products>ImageUrl}"/>
						</template>
					</Column>
					<Column
                        id="name"
                        width="11rem"
                        sortProperty="ProductName"
                        filterProperty="ProductName"
                        showFilterMenuEntry="true"
                        showSortMenuEntry="true"
						autoResizable="true">
						<m:Label text="Ürün Adı" />
						<template>
							<m:Text text="{products>ProductName}" wrapping="false" />
						</template>
					</Column>
					<Column 
                        width="9rem"
                        id="productId"
                        filterProperty=""
                        sortProperty=""
						autoResizable="true">
						<m:Label text="Ürün Kodu" />
						<template>
							<m:Text text="{products>ProductCode}" wrapping="false"/>
						</template>
					</Column>
					<Column 
                        id="quantity"
                        width="6rem"
                        hAlign="End"
                        sortProperty="Quantity"
						autoResizable="true">
						<m:Label text="Miktar" />
						<template>
							<m:Label text="{products>Quantity}" wrapping="false"/>
						</template>
					</Column>
					
					<Column 
                        width="9rem"
                        id="price"
                        sortProperty="ExtendedPrice"
						autoResizable="true">
						<m:Label text="Fiyat" />
						<template>
							<u:Currency value="{products>ExtendedPrice}" currency="{view>/currency}" />
						</template>
					</Column>
					<Column 
                        width="10rem"
                        id="size"
						autoResizable="true">
						<m:Label text="Beden" />
						<template>
							<m:Label text="{path: 'products>SizeId', formatter: '.getSizeName'}" wrapping="false"/>
						</template>
					</Column>
					<Column 
                        width="10rem"
                        id="color"
						autoResizable="true">
						<m:Label text="Renk" />
						<template>
							<m:Label text="{path: 'products>ColorId', formatter: '.getColorName'}" wrapping="false"/>
						</template>
					</Column>
					<Column 
                        width="10rem"
                        id="subCategory"
						autoResizable="true">
						<m:Label text="Alt Kategori" />
						<template>
							<m:Label text="{path: 'products>SubCategoryId', formatter: '.getSubCategoryName'}" wrapping="false"/>
						</template>
					</Column>
					<Column 
                        width="10rem"
                        id="categoryHome"
						autoResizable="true">
						<m:Label text="Ana Kategori" />
						<template>
							<m:Label text="{path: 'products>CategoryId', formatter: '.getCategoryName'}" wrapping="false" />
						</template>
					</Column>
                    <Column width="10rem"
					autoResizable="true">
                        <m:Label text="Detayı Gör" />
                        <template>
                            <m:Button text="Detayı Gör" press=".onPress" />
                        </template>
                    </Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>