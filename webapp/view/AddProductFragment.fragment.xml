<core:FragmentDefinition 
	xmlns:m="sap.m"
    xmlns="sap.ui.table"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:ui="sap.ui.unified">
        <m:VBox class="sapUiSmallMargin">
            
		<f:SimpleForm id="SimpleFormToolbarList"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:toolbar>
				<m:Toolbar id="TB">
					<m:HBox class="sapUiSmallMarginTop">
						<m:Button
							text="Kaydet"
							id="saveProductList"
							icon="sap-icon://save"
							press="onSavePress" />
						<m:Button
							text="İptal"
							id="cancelSaveList"
							icon="sap-icon://cancel"
							press="onCancelPress" />
					</m:HBox>
				</m:Toolbar>
			</f:toolbar>
			<f:content>
				<m:Toolbar ariaLabelledBy="Title2">
					<m:Title text="Ürün Ekle"/>
					<m:Button icon="sap-icon://add-product" />
				</m:Toolbar>
				<m:Label text="Ürün Fotoğrafı" />
				<ui:FileUploader
					id="fileUploaderList"
					name="myFileUpload"
					uploadUrl="http://localhost:3000/upload"
					tooltip="Upload your file to the local server"
					uploadComplete="handleUploadComplete"
					change="handleValueChange"
					typeMissmatch="handleTypeMissmatch"
					style="Emphasized"
					fileType="jpeg,jpg,png,gif"
					placeholder="Dosya seçiniz...">
						<ui:parameters>
							<ui:FileUploaderParameter
								name="Accept-CH"
								value="Viewport-Width"/>
							<ui:FileUploaderParameter
								name="Accept-CH"
								value="Width"/>
							<ui:FileUploaderParameter
								name="Accept-CH-Lifetime"
								value="86400"/>
						</ui:parameters>
				</ui:FileUploader>
				<!-- <Button
					text="Upload File"
					press="handleUploadPress"/> -->
				<m:Label text="Ürün Adı" />
				<m:Input value="{addProductModel>/ProductName}" id="addProductNameList" liveChange="onNameChange"/>
				<m:Label text="Miktar" />
				<m:Input value="addProductModel>/Quantity" type="Number" id="addQuantityList" liveChange="onQuantityChange"/>
				<m:Label text="Birim Fiyatı (TL)" />
				<m:Input value="addProductModel>/ExtendedPrice" type="Number" id="addExtendedPriceList"  liveChange="onPriceChange"/>
				<m:Label text="Beden" />
				<m:Select id="addSizeList" items="{sizes>/}" change="onSizeChange" selectedKey="1">
					<m:items>
						<core:Item text="{sizes>SizeName}" key="{sizes>SizeID}" />
					</m:items>
				</m:Select>
				<m:Label text="Renk" />
				<m:Select id="addColorList" items="{colors>/}" change="onColorChange" selectedKey="1">
					<m:items>
						<core:Item text="{colors>ColorName}" key="{colors>ColorID}"/>
					</m:items>
				</m:Select>
				<m:Label text="Kategori" />
				<m:Select id="addCategoryList" items="{categories>/}" change="onCategoryChange" selectedKey="1">
					<m:items>
						<core:Item text="{categories>CategoryName}" key="{categories>CategoryID}"/>
					</m:items>
				</m:Select>
				<m:Label text="Alt Kategori" />
				<m:Select id="addSubcategoryList" items="{subCategories>/}" change="onSubCategoryChange" selectedKey="1">
					<m:items>
						<core:Item text="{subCategories>SubCategoryName}" key="{subCategories>SubCategoryID}"/>
					</m:items>
				</m:Select>
			</f:content>
		</f:SimpleForm>

        </m:VBox>
</core:FragmentDefinition>
