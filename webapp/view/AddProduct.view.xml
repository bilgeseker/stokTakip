<mvc:View
	controllerName="ui5.walkthrough.controller.AddProduct"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:ui="sap.ui.unified">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormToolbar"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:toolbar>
				<Toolbar id="TB1">
					<HBox class="sapUiSmallMarginTop">
						<Button
							text="Kaydet"
							id="saveProduct"
							icon="sap-icon://save"
							press="onSavePress" />
					</HBox>
				</Toolbar>
			</f:toolbar>
			<f:content>
				<Toolbar ariaLabelledBy="Title2">
					<Title id="Title2" text="Ürün Ekle"/>
					<Button icon="sap-icon://add-product" />
				</Toolbar>
				<Label text="Ürün Fotoğrafı" />
				<ui:FileUploader
					id="fileUploader"
					name="myFileUpload"
					uploadUrl="http://localhost:3000/upload"
					tooltip="Upload your file to the local server"
					uploadComplete="handleUploadComplete"
					change="handleValueChange"
					typeMissmatch="handleTypeMissmatch"
					style="Emphasized"
					fileType="jpeg,jpg,png,gif"
					placeholder="Dosya seçiniz...">
						<ui:parameters>
							<ui:FileUploaderParameter
								name="Accept-CH"
								value="Viewport-Width"/>
							<ui:FileUploaderParameter
								name="Accept-CH"
								value="Width"/>
							<ui:FileUploaderParameter
								name="Accept-CH-Lifetime"
								value="86400"/>
						</ui:parameters>
				</ui:FileUploader>
				<!-- <Button
					text="Upload File"
					press="handleUploadPress"/> -->
				<Label text="Ürün Adı" />
				<Input value="" id="addProductName" />
				<Label text="Miktar" />
				<Input value="" type="Number" id="addQuantity" />
				<Label text="Birim Fiyatı (TL)" />
				<Input value="" type="Number" id="addExtendedPrice"  />
				<Label text="Beden" />
				<Select id="addSize" items="{sizes>/}"  >
					<items>
						<core:Item text="{sizes>SizeName}" key="{sizes>SizeID}" />
					</items>
				</Select>
				<Label text="Renk" />
				<Select id="addColor" items="{colors>/}" >
					<items>
						<core:Item text="{colors>ColorName}" key="{colors>ColorID}"/>
					</items>
				</Select>
				<Label text="Kategori" />
				<Select id="addCategory" items="{categories>/}" >
					<items>
						<core:Item text="{categories>CategoryName}" key="{categories>CategoryID}"/>
					</items>
				</Select>
				<Label text="Alt Kategori" />
				<Select id="addSubcategory" items="{subCategories>/}" >
					<items>
						<core:Item text="{subCategories>SubCategoryName}" key="{subCategories>SubCategoryID}"/>
					</items>
				</Select>
			</f:content>
		</f:SimpleForm>
	</VBox>
</mvc:View>