<mvc:View
	controllerName="ui5.walkthrough.controller.AddCategory"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="CategorySimpleFormToolbar"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false"
			>
			<f:content>
			<VBox>
				<Toolbar ariaLabelledBy="addCategoryTitle" class="sapUiSmallMarginBottom">
					<Title id="addCategoryTitle" text="Üst Kategori Ekle"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://add-product" />
				</Toolbar>
				
				<Label text="Üst Kategori Adı" />
				<Input id="addCategoryName" placeholder="Yeni üst kategori adı girin" width="90%" class="sapUiSmallMarginBottom"/>
				<Button text="Üst Kategori Ekle" press="onAddCategory"/>

			</VBox>	
			<VBox>
				<Toolbar ariaLabelledBy="addSubCategoryTitle" class="sapUiSmallMarginBottom">
					<Title id="addSubCategoryTitle" text="Alt Kategori Ekle"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://add-product" />
				</Toolbar>
				
				<Label text="Alt Kategori Adı" />
				<Input id="addSubCategoryName" placeholder="Yeni alt kategori adı girin" width="90%" class="sapUiSmallMarginBottom"/>
				
				<Label text="Üst Kategori Seçin" />
				<Select id="addSubCategoryList" items="{categories>/}" class="sapUiSmallMarginBottom">
					<items>
						<core:Item text="{categories>CategoryName}" key="{categories>CategoryID}"/>
					</items>
				</Select>
				<Button text="Alt Kategori Ekle" press="onAddSubCategory" />
			</VBox>
			</f:content>
		</f:SimpleForm>
	</VBox>
</mvc:View>
